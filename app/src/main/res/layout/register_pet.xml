<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <TextView
            android:id="@+id/petNameTextView"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:orientation="horizontal"/>
        <EditText
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@drawable/rounded_edittext"
            android:id="@+id/petNameEditText"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/petRelationListLay">
        <TextView
            android:id="@+id/petRelationTextView"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="Relacion"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:orientation="horizontal"/>
        <Spinner
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:id="@+id/petRelationList"
            >
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/petTypeListLay">
        <TextView
            android:id="@+id/petTypeTextView"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:orientation="horizontal"/>
        <Spinner
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:id="@+id/petTypeList"
            >
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/petGenderListLay">
        <TextView
            android:id="@+id/petGenderTextView"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="Genero"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:orientation="horizontal"/>
        <Spinner
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:id="@+id/petGeneroList"
            ></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/petBreedListLay">
        <TextView
            android:id="@+id/petBreedTextView"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="Raza"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:orientation="horizontal"/>
        <Spinner
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:id="@+id/petBreedList"
            >
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/petColorListLay">
        <TextView
            android:id="@+id/petColorTextView"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="Color"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:orientation="horizontal"/>
        <Spinner
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:id="@+id/petColorList"
            >
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/petSizeListLay">
        <TextView
            android:id="@+id/petSizeTextView"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="Estatura"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:orientation="horizontal"/>
        <Spinner
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:id="@+id/petSizeList"
            >
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/petBuildListLay">
        <TextView
            android:id="@+id/petBuildTextView"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="Contextura"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:orientation="horizontal"/>
        <Spinner
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:id="@+id/petBuildList"
            >
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/petStatusListLay">
        <TextView
            android:id="@+id/petStatusTextView"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:orientation="horizontal"/>
        <Spinner
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:id="@+id/petStatusList"
            >
        </Spinner>
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_button"
            android:id="@+id/button_save_pet_reg"
            android:textColor="#FFFFFF"
            android:layout_margin="6dp"
            android:background="#FFFFFF"
            android:backgroundTint="@color/com_facebook_blue"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

    </LinearLayout>

</LinearLayout>