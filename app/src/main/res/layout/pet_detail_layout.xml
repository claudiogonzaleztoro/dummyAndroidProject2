<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayLogout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/LayLogoutPetDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/image_pet_detail"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dog_icon"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/textViewNamePet"
                android:text="@string/text_view_name_pet"
                android:textColor="#08AE9E"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/textViewNamePetValue"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/textViewIdColor"
                android:text="@string/text_view_color"
                android:layout_centerHorizontal="true"
                android:textColor="#08AE9E"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/textViewIdColorValue"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/textViewIdSize"
                android:text="@string/text_view_size"
                android:layout_centerHorizontal="true"
                android:textColor="#08AE9E"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/textViewIdSizeValue"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/textViewIdBreed"
                android:text="@string/text_view_breed"
                android:layout_centerHorizontal="true"
                android:textColor="#08AE9E"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/textViewIdBreedValue"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:text="@string/text_view_type"
                android:id="@+id/textViewIdPetType"
                android:layout_centerHorizontal="true"
                android:textColor="#08AE9E"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/textViewIdPetTypeValue"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/textViewIdPetGender"
                android:text="@string/text_view_gender"
                android:layout_centerHorizontal="true"
                android:textColor="#08AE9E"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/textViewIdPetGenderValue"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/textViewIdContexture"
                android:text="@string/text_view_contexture"
                android:layout_centerHorizontal="true"
                android:textColor="#08AE9E"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/textViewIdContextureValue"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/textViewPetStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message_lost"
            />

        <android.support.v7.widget.AppCompatButton

            android:id="@+id/btn_report"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:text="@string/report_pet_button"/>



        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgDisplayImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDisplayImage"
            android:layout_centerInParent="true"
            android:contentDescription="area_where_image_is_to_be_displayed" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image_contact_user"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/contact_phone"
            android:layout_centerHorizontal="true"
            />
        </LinearLayout>



</LinearLayout>