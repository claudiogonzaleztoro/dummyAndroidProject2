<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayLogout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/LayLogoutPetDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/image_pet_detail"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dog_icon"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/textViewNamePet"
            android:layout_centerHorizontal="true"
            android:textColor="#08AE9E"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewIdColor"
            android:layout_centerHorizontal="true"
            android:textColor="#08AE9E"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewIdSize"
            android:layout_centerHorizontal="true"
            android:textColor="#08AE9E"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewIdBreed"
            android:layout_centerHorizontal="true"
            android:textColor="#08AE9E"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:id="@+id/textViewIdPetType"
            android:layout_centerHorizontal="true"
            android:textColor="#08AE9E"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewIdPetGender"
            android:layout_centerHorizontal="true"
            android:textColor="#08AE9E"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewIdContexture"
            android:layout_centerHorizontal="true"
            android:textColor="#08AE9E"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/textViewPetStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lost since 2 days and 3 hours"
            />

        <android.support.v7.widget.AppCompatButton

            android:id="@+id/btn_report"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:text="Report pet"/>



        </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image_contact_user"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/contact_phone"
            android:layout_centerHorizontal="true"
            />
        </LinearLayout>



</LinearLayout>